<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="io.github.aosa4054.whiskeynote.editWhiskey.EditWhiskeyViewModel"/>
    </data>
    <androidx.appcompat.widget.ContentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:focusableInTouchMode="true"
                android:focusable="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/editing_image"
                    android:layout_width="@dimen/size_circle_image"
                    android:layout_height="@dimen/size_circle_image"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/change_image"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/change_image"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundColor="@color/colorPrimary">

                    <io.github.aosa4054.whiskeynote.TextInputAutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="12dp"
                        android:hint="label1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--RelativeLayout for Material Spinner-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/shape_round_spinner">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="12dp"
                        android:text="label2"
                        android:gravity="bottom"
                        android:textSize="12sp"/>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/whiskey_types"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:textSize="24sp"
                        android:paddingBottom="24dp"
                        android:layout_marginBottom="-8dp"/>
                </RelativeLayout>

                <include layout="@layout/whiskey_types_chip_group"/>

                <!--
                味とか、値段、めもかな？-->

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fab_save"
            style="@style/extendedFab"
            android:layout_marginBottom="@dimen/fab_margin"
            android:text="@string/text_button_save"
            app:icon="@drawable/ic_done_white_24dp"
            android:layout_gravity="center_horizontal|bottom"/>
    </androidx.appcompat.widget.ContentFrameLayout>
</layout>
