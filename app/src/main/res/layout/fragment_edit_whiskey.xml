<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="io.github.aosa4054.whiskeynote.editWhiskey.EditWhiskeyViewModel"/>
        <variable name="scotch" type="io.github.aosa4054.whiskeynote.editWhiskey.EditWhiskeyViewModel.ScotchChipController"/>
    </data>
    <androidx.appcompat.widget.ContentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:focusableInTouchMode="true"
                android:focusable="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/editing_image"
                    android:layout_width="@dimen/size_circle_image"
                    android:layout_height="@dimen/size_circle_image"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/change_image"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/change_image"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    app:boxBackgroundColor="@color/colorPrimary"
                    android:layout_marginBottom="24dp">

                    <io.github.aosa4054.whiskeynote.TextInputAutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="label1"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--RelativeLayout for Material Spinner-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/shape_round_spinner"
                    android:layout_marginBottom="24dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginStart="12dp"
                        android:text="種類"
                        android:gravity="bottom"
                        android:textSize="12sp"/>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/whiskey_types"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:paddingBottom="18dp"
                        android:layout_marginBottom="-8dp"/>
                </RelativeLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/scotch_chip_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rippleColor="@color/colorAccent"
                        android:text="ブレンデッド"
                        android:onClick="@{() -> scotch.onCheckChanged(0)}"
                        app:chipBackgroundColor="@{scotch.isChecked[0] ? @color/colorAccentLight : @color/button_material_light}" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rippleColor="@color/colorAccent"
                        android:text="スペイサイド"
                        android:onClick="@{() -> scotch.onCheckChanged(1)}"
                        app:chipBackgroundColor="@{scotch.isChecked[1] ? @color/colorAccentLight : @color/button_material_light}"/>

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rippleColor="@color/colorAccent"
                        android:text="ハイランド"
                        android:onClick="@{() -> scotch.onCheckChanged(2)}"
                        app:chipBackgroundColor="@{scotch.isChecked[2] ? @color/colorAccentLight : @color/button_material_light}"/>

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rippleColor="@color/colorAccent"
                        android:text="ローランド"
                        android:onClick="@{() -> scotch.onCheckChanged(3)}"
                        app:chipBackgroundColor="@{scotch.isChecked[3] ? @color/colorAccentLight : @color/button_material_light}"/>

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rippleColor="@color/colorAccent"
                        android:text="アイラ"
                        android:onClick="@{() -> scotch.onCheckChanged(4)}"
                        app:chipBackgroundColor="@{scotch.isChecked[4] ? @color/colorAccentLight : @color/button_material_light}"/>

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rippleColor="@color/colorAccent"
                        android:text="アイランズ"
                        android:onClick="@{() -> scotch.onCheckChanged(5)}"
                        app:chipBackgroundColor="@{scotch.isChecked[5] ? @color/colorAccentLight : @color/button_material_light}"/>

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rippleColor="@color/colorAccent"
                        android:text="キャンベルタウン"
                        android:onClick="@{() -> scotch.onCheckChanged(6)}"
                        app:chipBackgroundColor="@{scotch.isChecked[6] ? @color/colorAccentLight : @color/button_material_light}"/>

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rippleColor="@color/colorAccent"
                        android:text="その他・わからない"
                        android:onClick="@{() -> scotch.onCheckChanged(7)}"
                        app:chipBackgroundColor="@{scotch.isChecked[7] ? @color/colorAccentLight : @color/button_material_light}"/>

                </com.google.android.material.chip.ChipGroup>

                <!--
                味とか、値段、めもかな？-->

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fab_save"
            style="@style/extendedFab"
            android:layout_marginBottom="@dimen/fab_margin"
            android:text="@string/text_button_save"
            app:icon="@drawable/ic_done_white_24dp"
            android:layout_gravity="center_horizontal|bottom"/>

    </androidx.appcompat.widget.ContentFrameLayout>
</layout>
